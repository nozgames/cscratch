[StyleSheet]
inherit=common

[belt]
width=auto
height=auto
flex-direction=column
margin-left=auto
margin-right=auto
margin-top=auto
margin-bottom=20
padding=5

[belt-slot]
width=auto
height=auto

[belt-slot:selected]
background-color=rgba(0, 255, 0, 1)

[belt-slot:selected:hover]
background-color=rgba(0, 0, 255, 1)

[belt-slot:hover]
background-color=rgba(255, 0, 0, 1)

[belt-slot-key]
margin-left=auto
margin-right=auto
width=auto
height=auto
font-size=24
color=rgba(255,255,255, 0.5)